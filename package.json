{
  "name": "cloudflare-fullstack-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@8.x",
  "scripts": {
    "start": "craco start",
    "dev:frontend": "craco start",
    "build": "craco build",
    "test": "craco test",
    "preview": "vite preview",
    "worker:dev": "wrangler dev workers/index.ts --inspector-port 9229",
    "worker:deploy": "wrangler deploy",
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm worker:dev\"",
    "deploy": "pnpm build && pnpm worker:deploy",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,less,md}\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,less,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "hono": "^3.11.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@craco/craco": "^7.1.0",
    "@hono/zod-validator": "^0.1.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "craco-less": "^3.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "less": "^4.2.0",
    "less-loader": "^11.1.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^4.5.5",
    "wrangler": "^3.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
